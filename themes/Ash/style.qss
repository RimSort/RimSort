
/* 
Theme: Ash
- Primary Background: #2c2c2c
- Secondary Background: #3c3c3c
- Tertiary Background: #525252
- Highlight: #494949
- Text: #7e7e7e
- Subtext: #b5b5b5
- Accent: #d0d0d0
*/
/* ======== General styling ======= */
/* Styling for MultiButton */
MultiButton QPushButton {
    border-top-right-radius: 0px;
    border-bottom-right-radius: 0px;
}
MultiButton QComboBox {
    border-top-right-radius: 0px;
    border-bottom-right-radius: 0px;
    padding: 0px;
}
MultiButton QToolButton {
    border-top-left-radius: 0px;
    border-bottom-left-radius: 0px;
    max-height: 1em;
}
MultiButton QToolButton::menu-indicator {
    image: none;
}
/* Styling for combo boxes */
QComboBox {
    color: white;
    background-color: #525252;
    border-style: solid;
    border-width: 0px;
    border-radius: 5px;
    min-height: 1em;
    min-width: 6em;
    padding: 1px;
}
QComboBox:hover {
    background-color: #494949;
}
/* Padding effect for QComboBox */
QComboBox#padInternal {
    padding-left: 25px;
}
QComboBox::drop-down#MainUI {
    width: 0;
    height: 0;
}
QComboBox::drop-down#MissingModsUI {
    border-style: solid;
}
QComboBox QAbstractItemView {
    background-color: #494949;
    color: white;
    selection-background-color: #525252;
    selection-color: white;
}
/* Horizontal line for use as a spacer */
QFrame#horizontalLine {
    background-color: white;
}
/* Default input box style */
QInputDialog#dialogue{
    background: #2e2e2e;
}
/* Styling for labels */
QLabel {
    color: white;
}
/* Bold style header */
QLabel#summaryHeader {
    color: white;
    font-weight: bold;
}
/* LoadingAnimation text label */
QLabel#loadingAnimationString {
    font-size: 18 px;
}
/* Metadata value labels + text */
QLabel#summaryLabel {
    color: white;
    font-weight: 500;
}
QLabel#summaryValue {
    color: white;
}
QLabel#summaryValueInvalid {
    color: red;
}
/* Styling for line edit widgets */
QLineEdit {
    color: #b5b5b5;
    background-color: #2c2c2c;
    border-style: solid;
    border-color: #525252;
    border-width: 1px;
    border-radius: 3px;
}
/* Styling for list widgets (mod list and rule editor lists) */
QListWidget {
    background-color: #2c2c2c;
    border-style: solid;
    border-color: #525252;
    border-width: 1px;
    border-radius: 3px;
    padding-right: 5px;
}
QListWidget::item {
    border: 0px;
    /* padding-right: 20px; */
    margin-right: 12px;
}

/* Styling for a selected mod item */
QListWidget::item:selected:!active {
    background: #3f3f3f;
}
QListWidget::item:selected:active {
    background: #494949;
}
QListWidget::item:hover {
    background: #333333;
}
/* Default context menu style */
QMenu {
    background-color: #2c2c2c;
    border: 1px solid #525252;
    padding: 4px;
}
QMenu::item {
    background-color: transparent;
    color: white;
    padding: 8px 16px;
}
QMenu::item:selected {
    background-color: #494949;
}
QMenu::separator {
    height: 1px;
    background-color: #525252;
    margin: 4px 0;
}
QMenu::indicator {
    width: 13px;
    height: 13px;
}
QMenu::icon {
    margin-right: 8px;
}
QMenu::item:disabled {
    color: #7e7e7e;
}
QMenu::item:disabled:selected {
    background-color: transparent;
}
QMenu::item:selected:disabled {
    color: #7e7e7e;
}
QMenu::item:hover {
    background-color: #3f3f3f;
}
QMenu::item:checked {
    background-color: #494949;
}
QMenu::item:checked:selected {
    background-color: #494949;
}
QMenu::item:checked:hover {
    background-color: #3f3f3f;
}
/* Default message box style */
QMessageBox#dialogue{
    background: #2e2e2e;
}
/* Styling for progress bars */
QProgressBar {
    border: 1px solid #525252;
    border-radius: 5px;
    background-color: #2c2c2c;
    color: white;
    text-align: center;
}
QProgressBar::chunk#default {
    background-color: #60798b;
    width: 10px;
}
QProgressBar::chunk#warn {
    background-color: yellow;
}
QProgressBar::chunk#critical {
    background-color: orange;
}
QProgressBar::chunk#emergency {
    background-color: red;
}
QProgressBar::chunk#warn {
    background-color: green;
}
/* Styling for push buttons */
QPushButton {
    color: white;
    background-color: #525252;
    border-style: solid;
    border-width: 0px;
    border-radius: 5px;
    min-height: 1em;
    min-width: 6em;
    padding: 1px;
}
QPushButton#flash {
    background-color: #54687a;
}
QPushButton:hover {
    background-color: #494949;
}
QPushButton:pressed {
    background-color: #414141;
    border-style: inset;
}
QPushButton#LeftButton {
    margin-right: 4px;
}
QPushButton#RightButton {
    margin-left: 4px;
}
/* Default style for QTabWidget */
QTabWidget {
    background-color: #2c2c2c; /* Primary background */
    border: 1px solid #525252; /* Panel borders */
}

QTabWidget::pane {
    border: 1px solid #525252; /* Panel borders */
    border-radius: 3px; /* Consistent with your other styles */
    padding: 4px; /* Content padding inside the tabs */
}

QTabWidget::tab-bar {
    alignment: center; /* Center-align the tabs */
    background-color: #2c2c2c; /* Optional: Tab bar background color */
}

/* Styling for individual tab buttons */
QTabBar::tab {
    background-color: #525252; /* Normal button color */
    color: white; /* Text color */
    border: 1px solid #525252; /* Normal border color */
    border-bottom-color: #2c2c2c; /* Border color for active tab */
    border-top-left-radius: 3px; /* Consistent with your button styles */
    border-top-right-radius: 3px; /* Consistent with your button styles */
    min-width: 6em; /* Minimum width for tabs */
    padding: 4px; /* Padding inside tabs */
}

QTabBar::tab:selected {
    background-color: #494949; /* Button hover color for selected tab */
    color: white;
    border-bottom: 1px solid #2c2c2c; /* Hide bottom border for selected tab */
}

QTabBar::tab:!selected {
    background-color: #3f3f3f; /* Different style for unselected tabs */
    margin-top: 2px; /* Unselected tabs are slight lower than the selected one */
}

QTabBar::tab:!selected:hover {
    background-color: #494949; /* Button hover color */
}

QTabBar::tab:disabled {
    color: #7e7e7e; /* Text color for disabled tabs */
}
/* Default style for tooltips */
QToolTip {
    border-style: none;
    background: #3a3a3a;
    color: white;
}
/* Default style for vertical scrollbars */
QScrollBar:vertical {
    border: 1px solid #525252;
    border-radius: 5px;
    background: #2c2c2c;
    width: 10px;
    margin: 20px 0px 20px 0px;
}
QScrollBar::handle:vertical {
    background: #4c4c4c;
    border: 0px solid #525252;
    border-radius: 4px;
    min-height: 0px;
}
QScrollBar::handle:vertical:hover {
    background: #3a3a3a;
}
QScrollBar::add-line:vertical {
    height: 10px;
    background: #525252;
    subcontrol-position: bottom;
    subcontrol-origin: margin;
    margin-bottom: 5px;
    border: 0px;
    border-radius: 5px;
}
QScrollBar::add-line:vertical:hover {
    background: #d0d0d0;
}
QScrollBar::sub-line:vertical {
    height: 10px;
    background: #525252;
    subcontrol-position: top;
    subcontrol-origin: margin;
    margin-top: 5px;
    border-radius: 5px;
}
QScrollBar::sub-line:vertical:hover {
    background: #d0d0d0;
}
QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;
}
QScrollBar:horizontal {
    height: 0px;
}
/* Used in conjunction with proxy_style.py for drag-drop styling */
QStyle::PE_IndicatorItemViewItemDrop {
    color: white;
}
/* Style for table view with sortable columns */
QHeaderView {
    background-color: #525252;
    color: white;
}
QHeaderView::section {
    background-color: #525252;
    color: white;
    padding: 4px;
    border-radius: 0px;
}
QHeaderView::section:horizontal:hover, 
QHeaderView::section:vertical:hover {
    background-color: #494949;
}
/* QTableView specific styling */
QTableView {
    gridline-color: #525252;
    background-color: #2c2c2c;
    color: white;
    alternate-background-color: #303030;
    selection-background-color: #494949;
    selection-color: white;
}
/* Styling for table view cells */
QTableView::item {
    padding: 4px;
    color: white;
    gridline-color: #525252;
    background-color: #2c2c2c;
}
QTableView::item:hover {
    background-color: #3f3f3f;
}
QTableView::item:disabled {
    color: #7e7e7e;
}
QTableView::item:selected {
    background-color: #494949;
}
/* Styling for table corner button */
QTableView QTableCornerButton::section {
    background-color: #525252;
    color: white;
}
QTableView QTableCornerButton::section:hover {
    background-color: #494949;
}
QTableView::indicator {
    width: 13px;
    height: 13px;
}
QTableView::indicator:checked {
    background: #3c3c3c;
}
QTableView::indicator:unchecked {
    background: #525252;
}
/* Styling for tool buttons */
QToolButton {
    background-color: #525252;
    border-style: solid;
    border-width: 0px;
    border-radius: 5px;
    color: white;
    padding: 1px;
}
QToolButton:hover {
    background-color: #494949;
}
QToolButton:pressed {
    background-color: #414141;
    border-style: inset;
}

/* ===== Browser (util/steam/browser.py) ===== */
QWidget#browserPanel {
    background-color: #2c2c2c;
}
QLabel#browserPaneldownloader_label {
    color: white;
}

/* ======= MainWindow (view/main_content_panel.py) ======= */
QMainWindow {
    background-color: #2c2c2c;
}
QWidget#MainPanel {
    border-style: solid;
    border-color: #525252;
    border-width: 1px;
    border-radius: 3px;
    margin: 7px; /* Space between frame and app edge */
}
/* Styling for the mod item text */
QLabel#ListItemLabel {
    color: white;
}
QLabel#ListItemLabelFiltered { 
    color: grey; 
}
/* Styling for the errors summary frame */
QWidget#errorFrame { /* Outer-most encapsulator */
    background-color: #2c2c2c;
    border-style: solid;
    border-color: #525252;
    border-width: 1px;
    border-radius: 3px;
}

/* ===== GameConfiguration (view/game_configuration_panel.py) ===== */
QLabel#gameVersion {
    color: white;
    margin-right: 4px;
}

/* ===== Mod info panel (sub_view/mod_info_panel.py) ===== */
/* Outer-most encapsulator */
/* Contains QScrollArea for mod description */
QWidget#descriptionWidget {
    background-color: #2c2c2c;
    border-style: solid;
    border-color: #525252;
    border-width: 1px;
