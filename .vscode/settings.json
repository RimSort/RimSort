    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "languageToolLinter.languageTool.ignoredWordsInWorkspace": [
    " macport",
    "codium",
    "cpython",
    "docstring",
    "docstrings",
    "isort",
    "macos-latest",
    "mypy",
    "redistributables",
