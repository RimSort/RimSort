    "moddependencies",
    "moddependenciesbyversion",
    "modmetadata",
    "MODNAME",
    "natsort",
    "natsorted",
    "pfid",
    "pfids",
    "playerfaction",
    "psutil",
    "publishedfileid",
    "publishedfileids",
    "redistributables",
    "Rentry",
    "rimsort",
    "savedatafolder",
    "savedscenario",
    "scandir",
    "shfmt",
    "steamapps",
    "steamcmd",
